<div class="bg-dark text-secondary px-4 py-5 text-center">
  <div class="py-5">
    <h1 class="display-5 fw-bold text-white">Découvrez des restos halal <br>qui le méritent</h1>
      <div class="col-lg-6 mx-auto">
        <p class="fs-5 mb-4">
        </p>
    </div>
  </div>
</div>

<div class="container home">
<div class="section ourTeam">
	<div class="row">
    <% @restaurants.each do |restaurant| %>
		<div class="col-xs-12 col-sm-12 col-md-4 col-lg-3 i">
			<div class="c text-center">
				<div class="wrap">
					<img src="/food.jpg" alt="#"  class="img-responsive">
					<div class="info">
						<h3 class="name"><%= restaurant.name%></h3>
						<h4 class="position"><%= restaurant.city%></h4>
					</div>
				</div>
				<div class="more">
          <div class="row">
          <div class="col-md-12 ">
              <span class="views-number">

                  <%= restaurant.price %>
              </span>
              <div>
                  <small>Views</small>
              </div>
          </div>
          <div class="col-md-12 ">
              <span class="views-number">
                <%= restaurant.taste %>  / 5
              </span>
              <div>
                  <small>Topics</small>
              </div>
          </div>
          <div class="col-md-12 ">
              <span class="views-number">
                  <%= restaurant.decor %>  / 5
              </span>
              <div>
                  <small>Posts</small>
              </div>
          </div>
          <div class="col-md-12 ">
              <span class="views-number">
                  <%= restaurant.host %>  / 5
              </span>
              <div>
                  <small>Posts</small>
                  <%= link_to 'Show', restaurant %>
              </div>
          </div>
          <div class="col-md-12 ">
              <span class="views-number">
                  Certification: <%= restaurant.certificate %>
              </span>
              <div>
                  <small>Posts</small>
              </div>
          </div>
          </div>
				</div>
			</div>
		</div>
    <% end %>
    </div>
</div>
</div>

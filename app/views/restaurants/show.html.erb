<div class="container py-5">
    <div class="jumbotron text-white jumbotron-image shadow" style="background-image: url(/food.jpg);">
      <h2 class="mb-4">
          <%= @restaurant.name.capitalize %>
      </h2>
      <H4 class="name_city">
          <%= @restaurant.city.capitalize %>
      </h4>
      <!--<a href="https://bootstrapious.com/snippets" class="btn btn-primary">More Bootstrap Snippets</a>-->
    </div>

    <div class="jumbotron show">
      <div class="row">
        <h3 class="title_score">Score du restaurant</h3>
        <div class="col-md-6">
          <div class="col-md-6 ">
             <span class="views-number"></span>
               <small>Prix</small>
           </div>
           <div class="col-md-6">
               <%= @restaurant.price.times  do %>
               <%  if @restaurant.price >= 4 %>
               <span class="material-icons" style="color: #2bde73">star_rate</span>
               <% elsif @restaurant.price == 3 %>
               <span class="material-icons" style="color: #ffc924">star_rate</span>
               <% elsif @restaurant.price <= 2 %>
               <span class="material-icons" style="color: red ">star_rate</span>
               <%end%>
                 <% end %>
            </div>
            <div class="col-md-6 ">
               <span class="views-number"></span>
                 <small>Qualité</small>
             </div>
             <div class="col-md-6">
                 <%= @restaurant.taste.times  do %>
                 <%  if @restaurant.taste >= 4 %>
                 <span class="material-icons" style="color: #2bde73">star_rate</span>
                 <% elsif @restaurant.taste == 3 %>
                 <span class="material-icons" style="color: #ffc924">star_rate</span>
                 <% elsif @restaurant.taste <= 2 %>
                 <span class="material-icons" style="color: red ">star_rate</span>
                 <%end%>
                   <% end %>
              </div>
        </div>
        <div class="col-md-6">
          <div class="col-md-6 ">
             <span class="views-number"></span>
               <small>Décor</small>
           </div>
           <div class="col-md-6">
               <%= @restaurant.decor.times  do %>
               <%  if @restaurant.decor >= 4 %>
               <span class="material-icons" style="color: #2bde73">star_rate</span>
               <% elsif @restaurant.decor == 3 %>
               <span class="material-icons" style="color: #ffc924">star_rate</span>
               <% elsif @restaurant.decor <= 2 %>
               <span class="material-icons" style="color: red ">star_rate</span>
               <%end%>
                 <% end %>
            </div>
            <div class="col-md-6 ">
               <span class="views-number"></span>
                 <small>Accueil</small>
             </div>
             <div class="col-md-6">
                 <%= @restaurant.host.times  do %>
                 <%  if @restaurant.host >= 4 %>
                 <span class="material-icons" style="color: #2bde73">star_rate</span>
                 <% elsif @restaurant.host == 3 %>
                 <span class="material-icons" style="color: #ffc924">star_rate</span>
                 <% elsif @restaurant.host <= 2 %>
                 <span class="material-icons" style="color: red ">star_rate</span>
                 <%end%>
                   <% end %>
              </div>

            <div class="col-md-6 ">
             <span>Certification:</span>
            </div>
            <div class="col-md-6 ">
             <%= @restaurant.certificate %>
            </div>
          <i class="fa-solid fa-money-bill-1-wave"></i></p>
        </div>
      </div>
    </div>
  </div>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>City:</strong>
  <%= @restaurant.city %>
</p>

<p>
  <strong>Price:</strong>
  <%= @restaurant.price %>
</p>

<p>
  <strong>Taste:</strong>
  <%= @restaurant.taste %>
</p>

<p>
  <strong>Decor:</strong>
  <%= @restaurant.decor %>
</p>

<p>
  <strong>Host:</strong>
  <%= @restaurant.host %>
</p>



